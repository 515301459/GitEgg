<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gitegg.mall.order.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gitegg.mall.order.entity.Order">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="store_id" property="storeId" />
        <result column="order_no" property="orderNo" />
        <result column="total_price" property="totalPrice" />
        <result column="total_pay_price" property="totalPayPrice" />
        <result column="express_original_price" property="expressOriginalPrice" />
        <result column="express_price" property="expressPrice" />
        <result column="total_goods_original_price" property="totalGoodsOriginalPrice" />
        <result column="total_goods_price" property="totalGoodsPrice" />
        <result column="store_discount_price" property="storeDiscountPrice" />
        <result column="member_discount_price" property="memberDiscountPrice" />
        <result column="coupon_id" property="couponId" />
        <result column="coupon_discount_price" property="couponDiscountPrice" />
        <result column="integral" property="integral" />
        <result column="integral_deduction_price" property="integralDeductionPrice" />
        <result column="name" property="name" />
        <result column="mobile" property="mobile" />
        <result column="address" property="address" />
        <result column="comments" property="comments" />
        <result column="order_form" property="orderForm" />
        <result column="leaving_message" property="leavingMessage" />
        <result column="store_comments" property="storeComments" />
        <result column="pay_status" property="payStatus" />
        <result column="pay_type" property="payType" />
        <result column="pay_time" property="payTime" />
        <result column="deliver_status" property="deliverStatus" />
        <result column="deliver_time" property="deliverTime" />
        <result column="express" property="express" />
        <result column="express_no" property="expressNo" />
        <result column="confirm_receipt" property="confirmReceipt" />
        <result column="confirm_receipt_time" property="confirmReceiptTime" />
        <result column="cancel_status" property="cancelStatus" />
        <result column="cancel_time" property="cancelTime" />
        <result column="recycle_status" property="recycleStatus" />
        <result column="offline" property="offline" />
        <result column="offline_code" property="offlineCode" />
        <result column="verifier_id" property="verifierId" />
        <result column="verifier_store_id" property="verifierStoreId" />
        <result column="support_pay_types" property="supportPayTypes" />
        <result column="evaluation_status" property="evaluationStatus" />
        <result column="evaluation_time" property="evaluationTime" />
        <result column="after_sales_out" property="afterSalesOut" />
        <result column="after_sales_status" property="afterSalesStatus" />
        <result column="status" property="status" />
        <result column="auto_cancel_time" property="autoCancelTime" />
        <result column="auto_confirm_verifier_time" property="autoConfirmVerifierTime" />
        <result column="auto_after_sales_time" property="autoAfterSalesTime" />
        <result column="tenant_id" property="tenantId" />
        <result column="create_time" property="createTime" />
        <result column="creator" property="creator" />
        <result column="update_time" property="updateTime" />
        <result column="operator" property="operator" />
        <result column="del_flag" property="delFlag" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, store_id, order_no, total_price, total_pay_price, express_original_price, express_price, total_goods_original_price, total_goods_price, store_discount_price, member_discount_price, coupon_id, coupon_discount_price, integral, integral_deduction_price, name, mobile, address, comments, order_form, leaving_message, store_comments, pay_status, pay_type, pay_time, deliver_status, deliver_time, express, express_no, confirm_receipt, confirm_receipt_time, cancel_status, cancel_time, recycle_status, offline, offline_code, verifier_id, verifier_store_id, support_pay_types, evaluation_status, evaluation_time, after_sales_out, after_sales_status, status, auto_cancel_time, auto_confirm_verifier_time, auto_after_sales_time, tenant_id, create_time, creator, update_time, operator, del_flag
    </sql>

    <!-- 分页查询列表 -->
    <select id="queryOrderList" resultType="com.gitegg.mall.order.dto.OrderDTO" parameterType="com.gitegg.mall.order.dto.QueryOrderDTO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mall_order
        WHERE del_flag = 0
        <if test="order.id != null and order.id != ''">
            AND id = #{order.id}
        </if>
        <if test="order.startDateTime != null and order.startDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &gt;= DATE_FORMAT(#{order.startDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        <if test="order.endDateTime != null and order.endDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &lt;= DATE_FORMAT(#{order.endDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        ORDER BY id DESC
    </select>

    <!-- 查询信息 -->
    <select id="queryOrder" resultType="com.gitegg.mall.order.dto.OrderDTO" parameterType="com.gitegg.mall.order.dto.QueryOrderDTO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mall_order
        WHERE del_flag = 0
        <if test="order.id != null and order.id != ''">
            AND id = #{order.id}
        </if>
        <if test="order.startDateTime != null and order.startDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &gt;= DATE_FORMAT(#{order.startDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        <if test="order.endDateTime != null and order.endDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &lt;= DATE_FORMAT(#{order.endDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        ORDER BY id DESC
    </select>

</mapper>
