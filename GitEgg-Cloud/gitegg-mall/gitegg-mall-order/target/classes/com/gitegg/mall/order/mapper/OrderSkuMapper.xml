<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gitegg.mall.order.mapper.OrderSkuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gitegg.mall.order.entity.OrderSku">
        <id column="id" property="id" />
        <result column="order_id" property="orderId" />
        <result column="goods_sku_id" property="goodsSkuId" />
        <result column="goods_sku_number" property="goodsSkuNumber" />
        <result column="goods_sku_price" property="goodsSkuPrice" />
        <result column="total_original_price" property="totalOriginalPrice" />
        <result column="total_price" property="totalPrice" />
        <result column="member_discount_price" property="memberDiscountPrice" />
        <result column="store_discount_price" property="storeDiscountPrice" />
        <result column="goods_sku_info" property="goodsSkuInfo" />
        <result column="refund_status" property="refundStatus" />
        <result column="after_sales_status" property="afterSalesStatus" />
        <result column="tenant_id" property="tenantId" />
        <result column="create_time" property="createTime" />
        <result column="creator" property="creator" />
        <result column="update_time" property="updateTime" />
        <result column="operator" property="operator" />
        <result column="del_flag" property="delFlag" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, order_id, goods_sku_id, goods_sku_number, goods_sku_price, total_original_price, total_price, member_discount_price, store_discount_price, goods_sku_info, refund_status, after_sales_status, tenant_id, create_time, creator, update_time, operator, del_flag
    </sql>

    <!-- 分页查询列表 -->
    <select id="queryOrderSkuList" resultType="com.gitegg.mall.order.dto.OrderSkuDTO" parameterType="com.gitegg.mall.order.dto.QueryOrderSkuDTO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mall_order_sku
        WHERE del_flag = 0
        <if test="orderSku.id != null and orderSku.id != ''">
            AND id = #{orderSku.id}
        </if>
        <if test="orderSku.startDateTime != null and orderSku.startDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &gt;= DATE_FORMAT(#{orderSku.startDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        <if test="orderSku.endDateTime != null and orderSku.endDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &lt;= DATE_FORMAT(#{orderSku.endDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        ORDER BY id DESC
    </select>

    <!-- 查询信息 -->
    <select id="queryOrderSku" resultType="com.gitegg.mall.order.dto.OrderSkuDTO" parameterType="com.gitegg.mall.order.dto.QueryOrderSkuDTO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mall_order_sku
        WHERE del_flag = 0
        <if test="orderSku.id != null and orderSku.id != ''">
            AND id = #{orderSku.id}
        </if>
        <if test="orderSku.startDateTime != null and orderSku.startDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &gt;= DATE_FORMAT(#{orderSku.startDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        <if test="orderSku.endDateTime != null and orderSku.endDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &lt;= DATE_FORMAT(#{orderSku.endDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        ORDER BY id DESC
    </select>

</mapper>
